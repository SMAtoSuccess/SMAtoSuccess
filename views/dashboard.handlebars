{{#if loggedIn}}
<article>
    <h2>Make a list!</h2>
    <form class="new-list-form">
        <div class="form-group">
            <label for="list-title">Title</label>
            <input name="list-title" type="text" class="form-control" value="{{list.list_name}}" />
        </div>
        <button type="submit" class="btn btn-danger">Create List</button>
    </form>
</article>

<script src = "/javascript/create-list.js"></script>
{{/if}}